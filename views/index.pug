  style.
    .container {
      display: flex;    
      height: 100vh;
    }

    .container .col {
      width: 50%;
    }
    
    #svl_canvas {
      margin-top: 2rem;
    }
    
    .global_section {
      display: inline-block;
      border-radius: 0.1rem;
      border: 1px solid black;
      background-color: lightgray;
      text-align: center;
      margin-left: 0.01rem;
      margin-bottom: 1rem;
    }
    
    #play {
      position: absolute;
      right: 0;
      margin-right: 1rem;
      cursor: pointer;
    }
    
    .stop {
      display: none;
    }

body
  .container
    #mei_canvas.col
    #svl_canvas.col
    
    #play
      i.play.fas.fa-play
      i.stop.fas.fa-stop
    
